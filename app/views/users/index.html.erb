<ul>
  <% @users.each do |u| %>
    <li class="clearfix">
      <%= link_to gravatar_for(u), u %>
      <%= link_to u.name, u %>
    </li>
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="col-md-4">
          <%= render partial: 'favorite_form', locals: {user: u} if logged_in? %>
        <div/>
      <div/>
    <div/>  
  <% end %>
</ul>
