<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    List <b class="caret"></b>
  </a>
